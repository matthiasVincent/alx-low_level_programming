#include "main.h"

/**
 * print_number - function
 * @n: integer to print
 *
 * Return: void
 */
void print_number(int n)
{
	int a , b, c , d, e, f, g, h, i, ;
	int a0, a1, a2, a3, a4, a5, a6, a7, a8, a9;

	if (n < 0)
	{
		_putchar('-');
		n = n * -1;
	}
	a = n / 1000000000;
	a0 = a;
	b = (n / 100000000) % 10;
	a1 = a0 + b;
	c = (n / 10000000) % 10;
	a2 = a1 + c;
	d = (n / 1000000) % 10;
	a3 = a2 + d;
	e = (n / 100000) % 10;
	a4 = a3 + e;
	f = (n / 10000) % 10;
	a5 = a4 + f;
	g = (n / 1000) % 10;
	a6 = a5 + g ;
	h = (n / 100) % 10;
	a7 = a6 + h;
	i = (n / 10) % 10;
	a8 = a7 + i;
	a9 = n % 10;

	if (a != 0)
		_putchar(a0 + '0');
	if (a1 != 0)
		_putchar(b + '0');
	if (a2 != 0)
		_putchar(c + '0');
	if (a4 != 0)
		_putchar(d + '0');
	if (a5 != 0)
		_putchar(e + '0');
	if (a6 != 0)
		_putchar(f + '0');
	if (a7 != 0)
		_putchar(g + '0');
	if (a8 != 0)
		_putchar(i + '0');
	_putchar(a9 + '0');
}
